<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".NavigationActivity">
    <!--    Widok obsługuje menu aplikacji.-->

    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:text="Menu"
        android:textAppearance="@style/settings" />

    <!--    Przycisk wywołuje powrót do poprzedniego widoku.-->
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:onClick="GoBack"
        android:text="Go back"
        android:textAppearance="@style/log_in_register" />

    <!--    Przycisk wywołuje przejście do widoku własnego profilu użytkownika.-->
    <Button
        android:id="@+id/my_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:onClick="MyProfile"
        android:text="My Profile"
        android:textAppearance="@style/log_in_register" />

    <!--    Przycisk wywołuje przejście do widoku wyszukiwarki użytkowników i roślin.-->
    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_profile"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:onClick="Search"
        android:text="Search"
        android:textAppearance="@style/log_in_register" />

    <!--    Przycisk wywołuje przejście do widoku rozpoznawania rośliny.-->
    <Button
        android:id="@+id/recognize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:onClick="Recognize"
        android:text="Recognize"
        android:textAppearance="@style/log_in_register" />

    <!--    Przycisk wywołuje przejście do widoku rozpoznawania rośliny.-->
    <Button
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:onClick="Calendar"
        android:text="Calendar"
        android:textAppearance="@style/log_in_register" />

    <!--    Przycisk wywołuje przejście do widoku ustawień.-->
    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recognize"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:onClick="Settings"
        android:text="Settings"
        android:textAppearance="@style/log_in_register" />

    <!--    Przycisk wywołuje wylogowanie użytkownika iprzejście do widoku logowania.-->
    <Button
        android:id="@+id/log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:onClick="LogOut"
        android:text="Log out"
        android:textAppearance="@style/log_in_register" />

    <!--    Przycisk wywołuje zamknięcie aplikacji.-->
    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendar"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/button"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:onClick="Exit"
        android:text="Exit"
        android:textAppearance="@style/log_in_register" />

</RelativeLayout>